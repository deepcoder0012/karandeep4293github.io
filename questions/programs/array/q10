#include<stdio.h>
#define n 3
void main(){
    int arr[n],i,sum=0;
    for(i=0;i<n;i++){
    printf("\nEnter value %d : ",i+1);
    scanf("%d",&arr[i]);
    sum=sum+arr[i];
    }
    printf("%d",sum);
}

    ---OUTPUT---
    Enter value 1 : 1

    Enter value 2 : 2
    
    Enter value 3 : 3
    6    

    