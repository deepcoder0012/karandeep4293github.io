#include <stdio.h> 
#include <stdlib.h> 

void push(int item, int *top, char stack[], int size) {
    if (*top == size - 1) {
        printf("Stack overflow\n");
    } else {
        (*top)++;
        stack[*top] = item;
    }
}

int pop(int *top, char stack[]) {
    if (*top == -1) {
        printf("Stack underflow\n");
        return -1;
    } else {
        return stack[(*top)--];
    }
}

char isOperator(char c) {
    return (c == '+' || c == '-' || c == '*' || c == '/');
}

int performOperation(int operand1, int operand2, char operator) {
    switch (operator) {
        case '+':
            return operand1 + operand2;
        case '-':
            return operand1 - operand2;
        case '*':
            return operand1 * operand2;
        case '/':
            if (operand2 == 0) {
                printf("Division by zero\n");
                exit(1);
            }
            return operand1 / operand2;
        default:
            printf("Invalid operator: %c\n", operator);
            exit(1);
    }
    return -1;
}

int evaluatePostfix(char* postfix) {
    int i, len, top = -1;
    char c, stack[20];
    len = strlen(postfix);
    for (i = 0; i < len; i++) {
        c = postfix[i];
        if (isdigit(c)) {
            int operand = c - '0';
            push(operand, &top, stack, 19);
        } else if (isOperator(c)) {
            int operand2 = pop(&top, stack);
            int operand1 = pop(&top, stack);
            int result = performOperation(operand1, operand2, c);
            push(result, &top, stack, 19);
        }
    }
    return pop(&top, stack);
}
int main() {
    char postfix[20];
    int result;
    int top = -1; 
    char stack[20];
    printf("Enter a postfix expression: ");
    scanf("%s", postfix);
    result = evaluatePostfix(postfix);
    printf("Result: %d\n", result);

    return 0;
}
        
output
Enter a postfix expression: 543*+
Result: 17
