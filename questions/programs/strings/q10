#include<stdio.h>
void main(){
    char str[40];
    printf("\nEnter string : ");
    gets(str);
    int index;
    printf("Enter index number : ");
    scanf("%d",&index);
    if(index<0 || index>sizeof(str)-2) printf("Index must be from 0 to %d",sizeof(str)-2);
    else printf("%c",str[index]);
}


    ---OUTPUT---   
Enter string : kartik
Enter index number : 
3
t

    